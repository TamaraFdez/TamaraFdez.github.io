---
import CssIcon from "./icons/CssIcon.astro";
import ReactJsIcon from "./icons/ReactJsIcon.astro";


const TAGS = {
  REACT: {
    name: "ReactJS",
    class: "bg-blue-500 text-white w-[90px]",
    icon: ReactJsIcon
    
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-900 text-white w-[70px]",
    icon: CssIcon
  
  }
}
const PROJECTS = [
    {
        title: "I Board Bot",
        description: "Proyecto Open-Source en el que me encargué de la parte de Front-end y Diseño. Nos encargamos de revivir una pizarra que ya no tenia página web ni acceso al servidor original.",
        link: "#",
        github: "https://github.com/Stay1444/iboardbot",
        image: ["/src/components/images/vista-ibb.png","/src/components/images/inic-ibb.png","/src/components/images/inic-v-ibb.png","/src/components/images/menu-ibb.png", "/src/components/images/menu-v-ibb.png"],
        tags: [TAGS.REACT, TAGS.CSS]
    }
];
---

{
  PROJECTS.map(({ github,image, title, description, tags }) => (
    <article>
            <h3 class="text-2xl font-semibolt text-pink-400 mb-2">{title}</h3>
          <img class="rounded-lg"
              src={image[0]}
              alt={`Captura de pantalla del proyecto ${title}`}
          />
               <ul class="flex flex-row gap-x-2 m-2">
                {tags.map((tag) => (
            <li>
              <span
                class={`flex  gap-x-2 rounded-full text-xs  ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
                
              </span>
            </li>
          ))}
        </ul>
            <p class="text-lg mb-4 text-pretty">{description}</p>
       
        <a
    href={github}
    class="inline-flex items-center mb-2 px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >Verlo en Github<svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
    >
        <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
    </svg></a>
          
        </article>
    ))
}
